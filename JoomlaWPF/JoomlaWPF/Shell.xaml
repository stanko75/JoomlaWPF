<Window x:Class="JoomlaWPF.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/CompositeWPF"
        Title="Shell" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" prism:RegionManager.RegionName="LeftModule"></ContentControl>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="MiddleModule"></ContentControl>
        <ContentControl Grid.Row="2" prism:RegionManager.RegionName="RightModule"></ContentControl>
    </Grid>
</Window>